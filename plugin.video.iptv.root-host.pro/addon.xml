        <import addon="xbmc.python" version="2.0"/>
        <import addon="script.module.parsedom" version="1.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" provides="video" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point= "xbmc.addon.metadata">
        <summary>Stream live IPTV from iptv.root-host.pro</summary>
        <description>Enables watching streams on iptv.root-host.pro</description>
        <disclaimer>This is an unofficial XBMC add-on</disclaimer>
        <platform>all</platform>
    </extension>
</addon>
