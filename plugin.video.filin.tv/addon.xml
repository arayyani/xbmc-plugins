<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.filin.tv"
       name="Filin.tv"
       version="1.0.8"
       provider-name="mrstealth">
    <requires>
        <import addon="xbmc.python" version="2.0"/>
        <import addon="script.module.parsedom" version="1.2.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" provides="video" library="default.py">>
        <provides>video</provides>
    </extension>
    <extension point= "xbmc.addon.metadata">
        <summary>Browse and stream from filin.tv</summary>
        <description>Enables watching streams on filin.tv that are flash enabled.</description>
        <description>For personal use only</description>
        <platform>all</platform>
    </extension>
</addon>
