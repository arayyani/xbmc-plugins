<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.filin.tv" version="1.0.0" name="Filin.tv" provider-name="mrstealth">
    <requires>
        <import addon="xbmc.python" version="2.0"/>
        <import addon="script.module.parsedom" version="0.9.1"/> 
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py"
      debugging="true">
        <provides>video</provides>
    </extension>
    <extension point= "xbmc.addon.metadata">
        <summary>Browse and stream from filin.tv</summary>
        <description>Enables watching streams on filin.tv that are flash enabled.</description>
        <disclaimer>This is an unofficial XBMC addon</disclaimer>
        <platform>all</platform>
    </extension>
</addon>
